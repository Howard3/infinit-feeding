# Infinit Feeding Application Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# S3 Storage Configuration
# ============================================
# S3-compatible storage endpoint (e.g., AWS S3, MinIO, DigitalOcean Spaces)
S3_ENDPOINT=

# S3 Access Key ID
S3_ACCESS_KEY=

# S3 Secret Access Key
S3_SECRET_KEY=

# S3 Bucket Name for storing files
S3_BUCKET_NAME=

# S3 Region (e.g., us-east-1, ap-southeast-1)
S3_REGION=

# ============================================
# Database Configuration
# ============================================
# Turso database URL with embedded authentication token
# Format: libsql://[DATABASE].turso.io?authToken=[TOKEN]
# Get your database URL: turso db show <database-name> --url
# Get your auth token: turso db tokens create <database-name>
DB_URI=

# ============================================
# Clerk Authentication
# ============================================
# Get these from https://dashboard.clerk.com
# Clerk Secret Key (starts with sk_)
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clerk Publishable Key (starts with pk_)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# API Configuration
# ============================================
# Static API key for external consumers (e.g., dedicated frontend)
# This is a simple shared secret for API authentication
API_KEY=

# ============================================
# Environment Configuration
# ============================================
# Environment mode: production or development
GO_ENV=production
