# Infinit Feeding Application Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# S3 Storage Configuration
# ============================================
# S3-compatible storage endpoint (e.g., AWS S3, MinIO, DigitalOcean Spaces)
S3_ENDPOINT=

# S3 Access Key ID
S3_ACCESS_KEY=

# S3 Secret Access Key
S3_SECRET_KEY=

# S3 Bucket Name for storing files
S3_BUCKET_NAME=

# S3 Region (e.g., us-east-1, ap-southeast-1)
S3_REGION=

# ============================================
# Database Configuration
# ============================================
# Turso database URL with embedded authentication token
# Format: libsql://[DATABASE].turso.io?authToken=[TOKEN]
# Get your database URL: turso db show <database-name> --url
# Get your auth token: turso db tokens create <database-name>
DB_URI=

# ============================================================================
# CLERK AUTHENTICATION - DUAL INSTANCE CONFIGURATION
# ============================================================================

# Admin Clerk Instance (for admin dashboard user management)
# This instance manages staff, feeders, and admin accounts
CLERK_ADMIN_SECRET_KEY=sk_test_your_admin_secret_key_here
CLERK_ADMIN_PUBLISHABLE_KEY=pk_test_your_admin_publishable_key_here

# Sponsor Clerk Instance (for user frontend/sponsor accounts)
# This instance manages sponsor/donor accounts
CLERK_SPONSOR_SECRET_KEY=sk_test_your_sponsor_secret_key_here
CLERK_SPONSOR_PUBLISHABLE_KEY=pk_test_your_sponsor_publishable_key_here
CLERK_SPONSOR_DASHBOARD_URL=https://dashboard.clerk.com/apps/app_your_sponsor_instance


# ============================================
# API Configuration
# ============================================
# Static API key for external consumers (e.g., dedicated frontend)
# This is a simple shared secret for API authentication
API_KEY=

# ============================================
# Environment Configuration
# ============================================
# Environment mode: production or development
GO_ENV=production
